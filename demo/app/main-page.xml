<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <Page.actionBar>
    <ActionBar title="nativescript-batch Demo">
    </ActionBar>
  </Page.actionBar>

  <GridLayout rows="64,*">
    <Button row="0" text="Start"
            tap="{{ startBatch }}" />
    
    <ListView row="1" items="{{ batchItems }}">
      <ListView.itemsTemplate>
        <Label text="{{ text }}" />
      </ListView.itemsTemplate>
    </ListView>
  </GridLayout>
</Page>